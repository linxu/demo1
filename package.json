{
  "name": "demo1",
  "productName": "demo1",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "package:win": "electron-forge package --arch=ia32,x64 --platform=win32",
    "make": "electron-forge make",
    "make:win": "electron-forge make --arch=ia32,x64 --platform=win32",
    "publish": "electron-forge publish",
    "publish:win": "electron-forge publish --arch=ia32,x64 --platform=win32",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "linxu",
  "license": "MIT",
  "repository": "linxu/demo1",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm",
          "flatpak",
          "snap"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "./build/icons/icon",
        "ignore": [
          ".idea"
        ]
      },
      "electronWinstallerConfig": {
        "name": "demo1",
        "loadingGif": "./build/win/install.gif",
        "setupIcon": "./build/icons/icon.ico"
      },
      "electronInstallerDMG": {
        "background": "./build/mac/install.png",
        "icon": "./build/icons/icon.icns",
        "contents": [
          {
            "x": 160,
            "y": 160,
            "type": "file",
            "path": "/Users/alfred/dev/github/demo1/out/demo1-darwin-x64/demo1.app"
          },
          {
            "x": 400,
            "y": 160,
            "type": "link",
            "path": "/Applications"
          }
        ]
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "linxu",
        "name": "demo1"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "demo1"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-is-dev": "^0.3.0",
    "update-electron-app": "^1.3.0",
    "electron-json-storage": "^4.1.1",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "2.0.7",
    "cross-env": "^5.2.0"
  }
}
